##update
#alias update-grub='sudo grub-mkconfig -o /boot/grub/grub.cfg'
alias pacnew='sudo find /etc -regextype posix-extended -regex ".+\.pac(new|save|orig)" 2> /dev/null'

#working directories
alias tw='cd $HOME/temp_work && ls -la'
alias kb='cd $HOME/kernel_build/linux'
alias walleye='cd $HOME/android_devices/walleye && ls -la'

##misc
alias md5='md5sum'
alias insync='insync quit && insync start --synchronous-full'
alias gitpush='git status && ssha && git add * && git commit -m "updated/committed via script" && git push'
alias octal='stat -c "%a %n"'
alias ssha='eval ssh-agent -s && ssh-add ~/.ssh/id_rsa'
#alias bootctl='sudo bootctl update'
alias scrot='scrot -d 5 -m /home/ridobe/Google_Drive/Backdrops_2560x1080/screenshots/current.jpeg'
#alias paccache='paccache -ruk0 && paccache -rk 2'
alias killx='pkill -15 Xorg'
alias microcode='journalctl --since yesterday | grep microcode'
alias pbr='pkgbuilder'
alias gitlog='git log --max-count=1 kernel'
alias sdk='sdkmanager'
alias code='ykman oath code'
alias unlock='sudo rm /var/lib/pacman/db.lck'
alias alias='cat /home/ridobe/dotfiles/bash_alias'

#text editor
export EDITOR="nano"

#don't put duplicate lines in the history. See bash(1) for more options
export HISTCONTROL=ignoreboth:erasedups

# Expand the history size
HISTFILESIZE=100000
HISTSIZE=100000

#print the time stamps associated with each history entry
export HISTTIMEFORMAT="%h %d %H:%M:%S "

#To append commands to the history file, rather than overwrite it
shopt -s histappend
